
================ Django Python Shell ==========================================================

===> Activate Shell
	
	python3 manage.py shell
	
==> Important Commands

	from polls.models import Choice, Questions
	
	Questions.objects.all()
		-- return All REcord OF perticular object Query Set
		
	from django.utils import timezone
		-- Import something in query shell
	
	q = Questions(question_text="What's new?", pub_date=timezone.now())
		-- Create Record Query
		
	q.save()
		-- Important To save Whithout this command record oprations are not save in database
		
	q.id
		-- Fetch recode data like this
		
	q.question_text = "What's up?"
	q.save() 
		-- Make change and save in Database.
		
	Questions.objects.filter(question_text__startswith="what")
		-- Use to filter record
		
	from django.utils import timezone
	current_year = timezone.now().year
	Question.objects.get(pub_date__year=current_year)
		-- Get Data from all record
		
	
	q.was_published_recently()
		-- Return Function Response
		
	
	q = Question.objects.get(pk=1)
		-- Get ID of 1 Record
		
	q.choice_set.all()
		-- Get All Choice Table Record of Connected with ID =1
		
	q.choice_set.create(choice_text="The sky", votes=0)
		-- Create Record of Choice PK whas Questions ID 1
		
	c = q.choice_set.create(choice_text="Just hacking again", votes=0)
		-- Create Recode and Store in object
		
	c.question
		-- Get Question Record of Choice Data

	c.delete()
		-- Delete Records.
		
	
